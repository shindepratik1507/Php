//Write a menu driven program to perform the following queue related operations a) Insert an element in queue
b) Delete an element from queue
c) Display the contents of queue//



<?php
// Initialize the queue as an empty array
$queue = [];

// Function to display the menu
function displayMenu() {
    echo "Menu:\n";
    echo "1. Insert an element into the queue\n";
    echo "2. Delete an element from the queue\n";
    echo "3. Display the contents of the queue\n";
    echo "4. Exit\n";
}

// Function to insert an element into the queue
function insertElement(&$queue, $element) {
    array_push($queue, $element);
    echo "Element '$element' inserted into the queue.\n";
}

// Function to delete an element from the queue (FIFO)
function deleteElement(&$queue) {
    if (empty($queue)) {
        echo "Queue is empty. Nothing to delete.\n";
    } else {
        $element = array_shift($queue);
        echo "Element '$element' deleted from the queue.\n";
    }
}

// Function to display the contents of the queue
function displayQueue($queue) {
    if (empty($queue)) {
        echo "The queue is empty.\n";
    } else {
        echo "Current Queue: \n";
        print_r($queue);
    }
}

// Main menu-driven program
do {
    displayMenu();
    // Read user input for menu choice
    $choice = readline("Enter your choice (1-4): ");

    switch ($choice) {
        case 1:
            // Insert an element
            $element = readline("Enter the element to insert: ");
            insertElement($queue, $element);
            break;

        case 2:
            // Delete an element
            deleteElement($queue);
            break;

        case 3:
            // Display the current queue
            displayQueue($queue);
            break;

        case 4:
            // Exit the program
            echo "Exiting the program...\n";
            break;

        default:
            echo "Invalid choice. Please try again.\n";
    }

    echo "\n"; // Add a new line for better readability after each operation
} while ($choice != 4);

?>