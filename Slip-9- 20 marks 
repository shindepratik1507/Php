//Write a menu driven program to perform the following stack related operations.
a) Insert an element in stack.
b) Delete an element from stack.[Hint: array_push(), array_pop()]//



<?php
// Initialize the stack as an empty array
$stack = [];

// Function to display the menu
function displayMenu() {
    echo "Menu:\n";
    echo "1. Insert an element in the stack\n";
    echo "2. Delete an element from the stack\n";
    echo "3. Display the current stack\n";
    echo "4. Exit\n";
}

// Function to insert an element into the stack
function insertElement(&$stack, $element) {
    array_push($stack, $element);
    echo "Element '$element' inserted into the stack.\n";
}

// Function to delete an element from the stack
function deleteElement(&$stack) {
    if (empty($stack)) {
        echo "Stack is empty. Nothing to delete.\n";
    } else {
        $element = array_pop($stack);
        echo "Element '$element' deleted from the stack.\n";
    }
}

// Function to display the current stack
function displayStack($stack) {
    if (empty($stack)) {
        echo "The stack is empty.\n";
    } else {
        echo "Current Stack: \n";
        print_r($stack);
    }
}

// Main menu-driven program
do {
    displayMenu();
    // Read user input for menu choice
    $choice = readline("Enter your choice (1-4): ");

    switch ($choice) {
        case 1:
            // Insert an element
            $element = readline("Enter the element to insert: ");
            insertElement($stack, $element);
            break;

        case 2:
            // Delete an element
            deleteElement($stack);
            break;

        case 3:
            // Display the current stack
            displayStack($stack);
            break;

        case 4:
            // Exit the program
            echo "Exiting the program...\n";
            break;

        default:
            echo "Invalid choice. Please try again.\n";
    }

    echo "\n"; // Add a new line for better readability after each operation
} while ($choice != 4);
?>
